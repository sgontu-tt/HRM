<%= form_for(@announcement) do |f| %>
  <%#= f.error_notification %>

  <div class="form-inputs">
  	<%=f.label :title%><br/>
    <%= f.text_field :title, class:"form-control" %><br/>
    <%=f.label :message%><br/>
    <%= f.text_area :message, class:"form-control" %>
  </div>
  <div class="form-actions">
    <%= f.submit class:"btn btn-primary"%>
  </div>
<% end %>
