<%title "Team"%>

<div class="panel panel-cblue">
<div class="panel-body">

<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
      <th>S.No</th>
      <th>Company ID</th>
      <th>Full Name</th>
      <th>Role</th>
      <th>Department</th>
    </tr>
  </thead>

  <tbody>
    <% @team.each_with_index do |emp, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= emp.ttid %></td>
        <td><%= link_to emp.fullname, emp  %></td>
        <td><%= emp.role.name  %></td>
        <%if emp.department_id%>
          <td><%=Department.find(emp.department_id).name%></td>
        <%else%>
          <td>Nil</td>
        <%end%>  
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<%= link_to ' Back', root_path, :class=>"fa fa-arrow-left btn btn-primary" %>