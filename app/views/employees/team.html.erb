<%title "Team"%>

<div class="panel panel-black">
<div class="panel-heading">Team size: <%=@emp.subordinates.size%>
</div>
<div class="panel-body">

<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>TT ID</th>
      <th>Full Name</th>
      <th>Role</th>
      <th>Department</th>
    </tr>
  </thead>

  <tbody>
    <% @emp.subordinates.each_with_index do |emp, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= emp.ttid %></td>
        <td><%= link_to emp.fullname, emp  %></td>
        <td><%= emp.role.name  %></td>
        <%if emp.department_id%>
          <td><%=Department.find(emp.department_id).name%></td>
        <%else%>
          <td>Nil</td>
        <%end%>  
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>