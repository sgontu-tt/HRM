<p id="notice"><%= notice %></p>
<% title "Leavetypes" %>
<div class="panel panel-black">
<div class="panel-heading">Listing Leave Types</div>
<div class="panel-body">
<table class="table table-hover-color table-bordered">
  <thead>
    <tr>
    <th>ID</th>
    <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leavetypes.each do |leavetype| %>
      <tr>
        <td><%=leavetype.id%></td>
        <td><%=leavetype.name%></td>
        <td><%= link_to 'Show', leavetype %></td>
        <td><%= link_to 'Edit', edit_leavetype_path(leavetype) %></td>
        <td><%= link_to 'Destroy', leavetype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leavetype', new_leavetype_path %>
</div>
</div>
